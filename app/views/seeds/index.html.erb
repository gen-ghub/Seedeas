<%= render "shared/header"%>
<%= flash[:user_delete] %>
<h1>トップページ</h1>
<%= link_to "投稿する", new_seed_path, class:"post" %>
<div class="contents row">
  <% @seeds.each do |seed| %>
      <span class="title">
        <%= seed.title %>
      </span>
    <div>
      <%= seed.tag.name %>
    </div>
    <div class="content_post" >
      <%= image_tag seed.image.variant(resize: '500x500'), class: "item-img" if seed.image.attached? %>
    </div>
    <div>
      <p><%= seed.idea %></p>
    </div>
  <% end %>
</div>
