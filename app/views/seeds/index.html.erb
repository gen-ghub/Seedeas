<%= render "shared/header"%>
<%= flash[:user_delete] %>
<h1>トップページ</h1>
<% if user_signed_in? %>
  <%= "こんにちは#{current_user.name}さん"%>
<% end %>
<div>
<%= link_to "投稿する", new_seed_path, class:"post" %>
</div>
<ul class='seed-lists'>
  <% @seeds.each do |seed| %>
    <li class='list'>
      <%= link_to seed_path(seed.id) do %>
        <div class="seed-title">
          <%= seed.title %>
        </div>
        <div class="seed-tag">
          <%= seed.tag.name %>
        </div>
        <div class="seed-image" >
          <%= image_tag seed.image.variant(resize: '500x500'), class: "item-img" if seed.image.attached? %>
        </div>
        <div class="seed-idea">
          <p><%= seed.idea %></p>
        </div>
      <% end %>
      <div class="seed-user">
        <%= link_to seed.user.name, user_path(seed.user.id) %>
      </div>
    </li>
  <% end %>
</ul>

