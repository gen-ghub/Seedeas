<header class='header'>
  <div class="heder-wrapper">
    <div class="left-wrapper">
      <div class="logo">
        <div class="header-icon logo-icon">
          <%= link_to root_path do%>
            <div class="btn logo-btn">
              <span class="hovering">トップページ</span><span class="default">Seedeas</span>
            </div>
          <% end %>
        </div>
      </div>

      <div class='search-bar-contents'>
        <%= form_with(url: search_seeds_path, local: true, method: :get, class:"search-form") do |form| %>
        <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "input-box" %>
        <%= form.submit "検索", class: "search-btn" %>
        <% end %>
      </div>
    </div>
    <div class="right-wrapper">
      <div class="header-icon">
        <% if user_signed_in? %>
          <%= link_to mypage_path(current_user.id) do%>
            <div class="btn">
              <span class="hovering">マイページ</span><span class="default"><%= current_user.name %></span>
            </div>
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete do%>
            <div class="btn">
              <span class="logaut logaut-default">ログアウト</span>
            </div>
          <% end %>
          <%= link_to new_seed_path do%>
            <div class="btn">
              <span class="post post-default">投稿する</span>
            </div>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path do%>
            <div class="btn">
              <span class="hovering">ようこそ</span><span class="default">ログイン</span>
            </div>
          <% end %>
          <%= link_to new_user_registration_path do%>
            <div class="btn">
              <span class="hovering">sign-up</span><span class="default">新規登録</span>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</header>


