

<div class="user-wrapper">

  <div class="user-table">
    <div class="user-image">
      <% if @user.image.attached? %>
        <%= image_tag @user.image %>
      <% else %>
        <%= image_tag 'profile_icon.png' %>
      <% end %>
    </div>
    <h1><%= @user.name %></h1>
    <% if user_signed_in? && @user == current_user %>
      <div class="create-room">
        <%= link_to "チャットルームへ移動する", rooms_path %>
      </div>
    <% end %>
    <div class="user-name">
      ユーザーネーム
      <span class="user-value">
        <%= @user.name %>
      </span>
    </div>
    <div class="user-email">
      メールアドレス
      <span class="user-value">
        <%= @user.email %>
      </span>
    </div>
    <div class="user-skill">
      スキル
      <span class="user-value">
        <%= @user.skill %>
      </span>
    </div>
    <div class="user-position">
      所属
      <span class="user-value">
        <%= @user.position %>
      </span>
    </div>
    <div class="user-profile">
      プロフィール
      <span class="user-value">
        <%= @user.profile %>
      </span>
    </div>
    <div class="edit-page">
    <% if  user_signed_in? && @user == current_user %>
      <%= image_tag 'edit-icon.png'%>
      <%= link_to 'プロフィール編集', edit_user_path(current_user) %>
        /
      <%= link_to '削除', user_path(current_user),method: :delete %>
    <% end %>
    </div>
    <div class="boder">

    </div>

    <div>
      <%= @user.name %>の投稿一覧
    </div>
    <div class="">
      <ul class='seed-lists'>
        <li class='list'>
          <% @seeds.each do |seed| %>
          <%= link_to seed_path(seed.id) do %>
          <div class="seed-title">
            <%= seed.title %>
          </div>
          <div class="seed-tag">
            <%= seed.tag.name %>
          </div>
          <div class="seed-image" >
            <%= image_tag seed.image.variant(resize: '300x300') if seed.image.attached? %>
          </div>
          <div class="seed-idea">
            <p><%= seed.idea %></p>
          </div>
          <% end %>
          <div class="seed-user">
            <%= link_to seed.user.name, user_path(seed.user.id) %>
          </div>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
